rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {
    function authed() { return request.auth != null; }
    function owner(uid) { return authed() && request.auth.uid == uid; }

    match /users/{uid} {
      allow read, write: if owner(uid);
      match /goals/{goalId} { allow read, write: if owner(uid); }
    }
    match /public_goals/{goalId} {
      allow read: if authed();
      allow create: if authed() && request.resource.data.authorUid == request.auth.uid;
      allow update: if authed()
        && resource.data.authorUid == request.auth.uid
        && request.resource.data.authorUid == request.auth.uid;
      allow delete: if authed() && resource.data.authorUid == request.auth.uid;
    }
  }
}
